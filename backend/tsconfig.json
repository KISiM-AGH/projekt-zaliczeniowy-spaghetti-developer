{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./app",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "semicolon": [true, "always"],
  "exclude": ["./app/node_modules"],
  "include": ["./app/**/*", "app.ts"]
}
